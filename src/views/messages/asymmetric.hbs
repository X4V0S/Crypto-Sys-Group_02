<div class="col-md-12 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Asymmetric Encrypt</h3>
        </div>
        <div class="card-body">
            <form action="/asymmetric" method="POST">
                <div class="form-group">
                    <label>Their registered name/username</label>
                    <input type="text" name="theirName" class="form-control" placeholder="Nombre de usuario de su amigo"
                    value="{{theirName}}">
                </div>
                <div class="form-group">
                    <label>My secret Key</label>
                    <div class="input-group">
                        <input type="text" name="mySecretKey" class="form-control" placeholder="su llave privada (usuario actual)"
                        value="{{mySecretKey}}">
                    </div>
                </div>
                <div class="form-group">
                    <label>My Public Key</label>
                    <input type="text" name="myPublicKey" class="form-control" placeholder="su llave publica (usuario actual)"
                    value="{{myPublicKey}}">
                </div>
                <div class="form-group">
                    <label>Message</label>
                    <textarea name="msg" class="form-control"
                    value="{{msg}}"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Encrypt</button>
                </div>
            </form>
        </div>
    </div>
</div>
