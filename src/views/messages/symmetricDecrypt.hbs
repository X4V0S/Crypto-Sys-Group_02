<!-- Keys + Nonce -->
<div class="row">
    <div class="col-md-12 mx-auto">
        <div class="card">
            <div class="card-header">
                <h3>Symmetric Decrypt</h3>
            </div>
            <div class="card-body">
                <form action="/symmetricDecrypt" method="POST">
                    <div class="form-group">
                        <label>Secret Key</label>
                        <input type="text" name="secretKey" class="form-control"
                        value="{{secretKey}}">
                    </div>
                    <div>
                        <label>Encrypted Message</label>
                        <textarea name="encrypted" class="form-control"
                        value="{{encrypted}}"></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success btn-block">Decrypt</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
