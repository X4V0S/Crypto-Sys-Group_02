<!-- Keys + Nonce -->
<div class="col-md-12 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Asymmetric Decrypt</h3>
        </div>
        <div class="card-body">
            <form action="/asymmetricDecrypt" method="POST">
                <div class="form-group">
                    <label>Llave compartida</label>
                    <input type="text" name="sharedKeyUser" class="form-control"
                    value="{{sharedKeyUser}}">
                </div>
                <div class="form-group">
                    <label>Encrypted Message</label>
                    <textarea name="EncryptedMessage" class="form-control"
                    value="{{EncryptedMessage}}"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">Decrypt</button>
                </div>
            </form>
        </div>
    </div>
</div>